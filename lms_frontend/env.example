# Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
# For production with custom domain, use:
# NEXT_PUBLIC_API_URL=https://api.edumentry.com
# or if backend is on same domain:
# NEXT_PUBLIC_API_URL=https://edumentry.com/api

# Development Settings
NEXT_PUBLIC_APP_NAME=InfoFit Labs LMS
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
